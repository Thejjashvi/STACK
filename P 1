#include <iostream>
#include <stack>
using namespace std;

int main() {
    stack<string> circuitStack;   // Stack to store circuit board IDs
    int choice;
    string circuitID;

    while (true) {
        cout << "\n--- Electronic Workshop: Circuit Board Stack ---\n";
        cout << "1. Push Circuit Board (Add)\n";
        cout << "2. Pop Circuit Board (Remove)\n";
        cout << "3. Display Stack\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
        case 1:
            cout << "Enter Circuit ID (e.g., CB101): ";
            cin >> circuitID;
            circuitStack.push(circuitID);
            cout << circuitID << " pushed onto the stack.\n";
            break;

        case 2:
            if (!circuitStack.empty()) {
                cout << "Popped: " << circuitStack.top() << endl;
                circuitStack.pop();
            } else {
                cout << "Stack is empty. No boards to pop.\n";
            }
            break;

        case 3:
            if (circuitStack.empty()) {
                cout << "Stack is empty.\n";
            } else {
                cout << "Stack contents (Top to Bottom):\n";
                stack<string> temp = circuitStack; // Temporary copy
                while (!temp.empty()) {
                    cout << temp.top() << endl;
                    temp.pop();
                }
            }
            break;

        case 4:
            cout << "Exiting program.\n";
            return 0;

        default:
            cout << "Invalid choice! Try again.\n";
        }
    }
}
